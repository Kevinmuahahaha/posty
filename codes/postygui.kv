<holder>:
	server_ip: server_ip
	server_port: server_port
	task: task
	file_path: file_path
	post_id: post_id

	textarea: textarea

	GridLayout:
		cols: 1
		size: root.width - 20, root.height - 20
		pos: 10, 10
	
		GridLayout:
			cols: 2
			size: root.width / 3, root.height /3
			Label:
				text:"Server Address"
			TextInput:
				id: server_ip
			Label:
				text:"Server Port"
			TextInput:
				id: server_port
			Label:
				text:"Task"
			TextInput:
				id: task
			Label:
				text:"File Path(Optional)"
			TextInput:
				id: file_path
			Label:
				text:"Post ID(Optional)"
			TextInput:
				id: post_id
			Button:
				text:"Launch"
				on_press: root.go()

		TextInput:
			font_name: './fix_encoding_msyh.ttf'
			id: textarea
			multiline: True
				
		
